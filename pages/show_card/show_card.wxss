/* show_card.wxss */
page,
.page,
.page__bd{
  background: #09BB07;
  height: 100%;
}
.card-box{
  width: 90%;
  margin: 32px auto;
}
.card-haeder{
  height: 40px;
  width: 100%;
  line-height: 40px;
  background: #fff;
}
.card-logo{
  width: 32px;
  height: 32px;
  margin: 4px 16px;
  float: left;
}
.card-logo image{
  width: 32px;
  height: 32px;
  border-radius: 16px;
}
.shop-title{
  float: left;
}
.quan-area{
  float: right;
}
.quan-share{
  float: right;
}
.card-line{
  height: 20px;
  background: #fff;
  display: flex;
}
.line-l{
  height: 20px;
  width: 20px;
  background: #09BB07;
  border-radius: 10px;
  margin-left: -10px;
}
.line{
  width: 100%;
  height: 10px;
  border-bottom: 1px dashed #ccc;
}
.line-r{
  height: 20px;
  width: 20px;
  background: #09BB07;
  border-radius: 10px;
  margin-right: -10px;
}
.qcode{
  width: 100%;
  height: 200px;
  background: #fff;
  text-align: center;
}
.qcode image{
  height: 200px;
  width: 200px;
  margin: 0px auto;
}