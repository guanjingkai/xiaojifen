/* show_card.wxss */
page,
.page,
.page__bd{
  background: #09BB07;
  height: 100%;
}
.card-box{
  width: 90%;
  margin: 64rpx auto;
}
.card-haeder{
  height: 80rpx;
  width: 100%;
  line-height: 100rpx;
  background: #fff;
  overflow: hidden;
}
.card-logo{
  width: 64rpx;
  height: 64rpx;
  margin: 18rpx 32rpx auto;
  float: left;
}
.card-logo image{
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
}
.shop-title{
  float: left;
}
.quan-area{
  float: right;
}
.quan-share{
  float: right;
}
.card-line{
  height: 40rpx;
  background: #fff;
  display: flex;
}
.line-l{
  height: 40rpx;
  width: 40rpx;
  background: #09BB07;
  border-radius: 20rpx;
  margin-left: -20rpx;
}
.line{
  width: 100%;
  height: 20rpx;
  border-bottom: 1px dashed #ccc;
}
.line-r{
  height: 40rpx;
  width: 40rpx;
  background: #09BB07;
  border-radius: 20rpx;
  margin-right: -20rpx;
}
.qcode{
  width: 100%;
  height: 380rpx;
  background: #fff;
  text-align: center;
}
.qcode image{
  height: 300rpx;
  width: 300rpx;
  margin: 0px auto;
}
.qcode-num{
  display: block;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 48rpx;
  color: #777;
}