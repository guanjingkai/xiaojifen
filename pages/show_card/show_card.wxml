<!--show_card.wxml-->
<view class="page">
  <view class="card-box">
    <view class="card-haeder">
      <view class="card-logo">
        <image src="../../image/demo/xingbake.jpeg"></image>
      </view>
      <view class="shop-title">
        [星巴克]拿铁大杯兑换券
      </view>
      <!-- <view class="quan-share">
        分享
      </view>
      <view class="quan-area">
        全国通用
      </view> -->

    </view>
    <view class="card-line">
      <view class="line-l"></view>
      <view class="line"></view>
      <view class="line-r"></view>
    </view>
    <view class="qcode">
      <image src="../../image/demo/qcode.png"></image>
      <text class='qcode-num'>1223 2415</text>
    </view>
    <view class="card-line">
      <view class="line-l"></view>
      <view class="line"></view>
      <view class="line-r"></view>
    </view>
    <view style='background:#ffffff;border-bottom: 1px dashed #ccc;'>
      <view class='quan-info'>
        <text class='quan-info-title'>适用门店</text>
        <text class='quan-info-value'>全国通用</text>
      </view>
      <view class='quan-info'>
        <text class='quan-info-title'>兑换限制</text>
        <text class='quan-info-value'>每个用户限兑换1张</text>
      </view>
      <view class='quan-info'>
        <text class='quan-info-title'>有效期</text>
        <text class='quan-info-value'>2017.09.06-2017.10.20</text>
      </view>
      <view class='quan-info'>
        <text class='quan-info-title'>可用时段</text>
        <text class='quan-info-value'>周一至周日 全天</text>
      </view>
    </view>
    <view style='background:#ffffff;display:flex;border-bottom: 1px dashed #ccc;'>
      <view class='add-location'>
        <text>北京市朝阳区维亚大厦1层</text>
      </view>
      <view class='add-map' bindtap='openMap'>
        <image class="goodInfoM" src="../../image/icon/navigation.png"></image>
      </view>
    </view>
    <view style='background:#ffffff;display:flex;'>
      <view class='add-location'>
        <text>兑换券详情</text>
      </view>
      <view class='add-map' bindtap='openGoodIndex'>
        <image class="goodInfoM" src="../../image/icon/in-right.png"></image>
      </view>
    </view>
  </view>

</view>