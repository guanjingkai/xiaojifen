page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 16px;
    text-align: center;
    background: #fcfcfc;
}
.gooditem{
  display: block;
  margin-right: 8px;
  margin-left: 8px;
  margin-bottom: 16px;
  width: 96%;
  border-radius: 8px;
  overflow:hidden;
}
.gooditem_shop{
  display:block;
  width: 100%;
  height: 80px;
  background: #DEF2FF;
}
.gooditem_goodslist{
  display: block;
  overflow: hidden;
  background: #fff;
}
.gooditem_logo ,.gooditem_logo image{
  width: 64px;
  height: 64px;
  border-radius: 40px;
}
.gooditem_logo{
  float: left;
  margin: 8px;
}
.gooditem_info{
  float: left;
  margin: 8px;
}
.gooditem_lbs{
  float: right;
  margin: 8px;
  width: 120px;
  text-align: right;
}
.shop_title, .shop_add{
  height: 32px;
  line-height: 32px;
  text-align: left;
  display: block;
}
.shop_title{
  font-size: 18px;
}
.shop_add{
  font-size: 14px;
}
.goods{
  display: block;
  width: 100%;
  height: 32px;
}
.goods_title{
  height: 32px;
  line-height: 32px;
  text-align: left;
  display: block;
  float: left;
  margin-left: 8px;
  font-size: 12px;
  color: #ccc;
}
.goods_integral{
  height: 32px;
  line-height: 32px;
  text-align: right;
  display: block;
  float: right;
  margin-right: 8px;
}
.goods_integral{
  height: 32px;
  line-height: 32px;
  text-align: right;
  display: block;
  float: right;
  margin-right: 8px;
}