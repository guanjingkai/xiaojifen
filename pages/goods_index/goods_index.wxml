<view class="page">
  <view class="video">
    <video class="video" src="http://movie.ks.js.cn/flv/other/1_0.mp4" autoplay="{{true}}" loop="{{true}}"></video>
  </view>
  <!--标题  -->
  <view class="bigTitle" style="">
    <view class="bigTitleV">
      <text class="bigTitle1">[星巴克]拿铁咖啡大杯</text>
      <text class="bigTitle2">☆☆☆☆☆</text>
    </view>
    <view class="bigTitleM">
      <text class="huibi">10惠币</text>
    </view>
  </view>
  <!--地图  -->
  <!-- map.wxml -->
  <view class='add-box'>
    <view class='add-location'>
      <text>北京市朝阳区三里屯路19号三里屯太古里南区</text>
    </view>
    <view class='add-map' bindtap='openMap'>
      <image class="goodInfoM" src="../../image/icon/navigation.png"></image>
    </view>
  </view>
  <view class="weui-panel weui-panel_access">
    <view class="weui-panel__hd">商品介绍</view>
    <view class="weui-panel__bd">
      <image class="goodInfoM" src="../../image/demo/coffeeinfo.jpeg" mode="widthFix"></image>
    </view>

  </view>
  <view class="weui-panel weui-panel_access">
    <view class="weui-panel__hd">使用信息</view>
    <view class="weui-panel__bd">
      <view class='quan-info'>
        <text class='quan-info-title'>当前库存</text>
        <text class='quan-info-value'>9918</text>
      </view>
      <view class='quan-info'>
        <text class='quan-info-title'>兑换限制</text>
        <text class='quan-info-value'>每个用户限兑换1张</text>
      </view>
      <view class='quan-info'>
        <text class='quan-info-title'>有效期</text>
        <text class='quan-info-value'>2017.09.06-2017.10.20</text>
      </view>
      <view class='quan-info'>
        <text class='quan-info-title'>可用时段</text>
        <text class='quan-info-value'>周一至周日 全天</text>
      </view>
    </view>

  </view>
  <view class="weui-panel weui-panel_access">
    <view class="weui-panel__hd">试用门店</view>
    <view class="weui-panel__bd">
     <view class='quan-info'>
        <text class='quan-info-title'>全店通用</text>
      </view>
    </view>

  </view>
  <view class="weui-panel weui-panel_access">
    <view class="weui-panel__hd">兑换流程</view>
    <view class="weui-panel__bd">
      <image class="goodInfoM" src="../../image/demo/liucheng.png" mode="widthFix"></image>
    </view>

  </view>
  <view class="weui-panel weui-panel_access">
    <view class="weui-panel__hd">兑换流程</view>
    <view class="weui-panel__bd">
      <scroll-view class="bigGoodsBox" scroll-x="true">
        <view class="bigGoods" wx:for="{{bigGoodsList}}">
          <view class="bigImage">
            <image src="../../image/demo/xingbake.jpeg"></image>
          </view>
          <view class="bigGoodsInfo">
            <view class="bigGoodsTitle">星巴克拿铁大杯</view>
            <view class="bigGoodsFen">
              <text class="bigGoodsHuiB">100惠币</text><text class="bigGoodsPrice">(市价:36元)</text>
            </view>
          </view>
        </view>
      </scroll-view>
    </view>

  </view>

<view class="" style="height:112rpx;width:100%;"> </view>
</view>
<view class="footer">
  <view class="iconbutton" bindtap="likeSuccess">收藏</view>
  <view class="iconbutton">分享</view>
  <view class="postOrder" bindtap="openConfirmExchange">兑换</view>
</view>