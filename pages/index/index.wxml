<!--index.wxml-->
<view class="container">
  <view class="usermotto">
    <text class="user-motto">11</text>
  </view>
</view>
<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
      <view class="weui-tab__panel">
        <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
          <view class="gooditem" wx:for="{{shopList}}">
            <view class="gooditem_shop" bindtap="openShopIndex">
              <view class="gooditem_logo">
                <image src="../../image/demo/ele.jpeg"></image>
              </view>
              <view class="gooditem_info">
                <text class="shop_title">饿了么</text>
                <text class="shop_add">朝阳区静安中心一楼</text>
              </view>
            </view>
            <view class="gooditem_goodslist">
              <view class="goods" wx:for="{{goodsList}}">
                <text class="goods_title">饿了么</text>
                <text class="goods_integral">0元+100积分</text>
              </view>
            </view>
          </view>
        </view>
        <view class="weui-tab__content" hidden="{{activeIndex != 1}}">选项二的内容</view>
        <view class="weui-tab__content" hidden="{{activeIndex != 2}}">选项三的内容</view>
        <view class="weui-tab__content" hidden="{{activeIndex != 3}}">选项三的内容</view>
      </view>
    </view>
  </view>
</view>